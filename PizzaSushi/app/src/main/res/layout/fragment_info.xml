<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <TextView
        android:id="@+id/name_info_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:textColor="@color/primary_text"
        android:text="Наполитана"/>

    <TextView
        android:id="@+id/cost_info_view"
        android:layout_alignTop="@id/name_info_view"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/primary_dark"
        android:text="Cnjbvjcnm 100S"
        />

    <TextView
        android:id="@+id/description_info_view"
        android:layout_alignTop="@id/cost_info_view"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:textStyle="italic"
        android:textColor="@color/primary_text"
        android:text="Сочный сырокопченый бекон, нежная корейка, тающая сырокопченая шейка, ароматные шампиньоны, лук, фир­менный соус, нежнейший сыр «Моцарелла», свежая зелень, румяное хрустящее тесто"
        />

    <ImageView
        android:id="@+id/image_info_view"
        android:layout_alignTop="@id/description_info_view"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sicilia_p"/>

    <ImageButton
        android:id="@+id/add_to_basket"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/name_info_view"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/to_basket_style"
        />

</RelativeLayout>